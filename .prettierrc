{
  "printWidth": 50,
  "proseWrap": "always",
  "singleQuote": false,
  "semi": false,
  "bracketSpacing": true,
  "arrowParens": "avoid",
  "parser": "babel",
  "trailingComma": "all",
  "overrides": [
    {
      "files": ["*.ts", "*.tsx"],
      "options": { "parser": "typescript" }
    },
    {
      "files": "*.md",
      "options": { "parser": "markdown" }
    },
    {
      "files": "*.yml",
      "options": { "parser": "yaml" }
    },
    {
      "files": "*.json",
      "options": { "parser": "json", "printWidth": 80 }
    },
    {
      "files": "*.css",
      "options": { "parser": "css" }
    }
  ]
}
